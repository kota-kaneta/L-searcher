
  <% if current_user.following? @user %>
    <div class="follow-release">
    <%= link_to "フォローを解除する", {controller: :users,action: :unfollow,user_id: @user.id}, method: :put, class: "follow-now" %>
    </div>
  <% else %>
  <div class="follow-link">
    <%= link_to "フォローする", {controller: :users,action: :follow,user_id: @user.id}, method: :put, class: "no-follow-now-link" %>
  </div>
  <% end %>
