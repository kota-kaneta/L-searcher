                    <%= "#{schedule.from_time_thu}〜#{schedule.to_time_thu}" %>
                  </div>
                  <div class="tl-location">
                    <%= schedule.location %>
                  </div>
                </div>
              </div>
            <% end %>
            <% if Date.today.wday == 5 && schedule.from_time_fri != nil && schedule.to_time_fri != nil%>
