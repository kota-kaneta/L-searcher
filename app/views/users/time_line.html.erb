                  <div class="times">
                    <%= "#{schedule.from_time_tue}〜#{schedule.to_time_tue}" %>
                  </div>
                  <div class="tl-location">
                    <%= schedule.location %>
                  </div>
                </div>
              </div>
            <% end %>
            <% if Date.today.wday == 3 && schedule.from_time_wed != nil && schedule.to_time_wed != nil%>
