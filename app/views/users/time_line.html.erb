            <% if Date.today.wday == 0 && schedule.from_time_sun != nil && schedule.to_time_sun != nil%>
              <div class="in-each">
                <% if current_user.making_ids.include?(user.id) %>
                  <div class="tl-left">
                    <div class="l_user">
                      <%= link_to "★#{user.name}★", user_path(user) %>
                    </div>
                  </div>
                <% else %>
                  <div class="tl-left">
                    <div class="l_user">
                      <%= link_to "#{user.name}", user_path(user) %>
                    </div>
                  </div>
                <% end %>
                <div class="tl-right">
                  <div class="times">
                    <%= "#{schedule.from_time_sun}：00 〜 #{schedule.to_time_sun}：00" %>
                  </div>
                  <div class="tl-location">
                    <%= schedule.location %>
                  </div>
                </div>
              </div>
