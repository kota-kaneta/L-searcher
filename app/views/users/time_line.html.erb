

<div class="back-link">
    <%= link_to ">>トップページへ", root_path%>
</div>
  <div class="time-line">
    <% unless current_user.all_following.present? %>
      <div class="nothing-follow">
        ここにフォロー中のユーザーが表示されます
      </div>
    <% else %>
      <div class="tl-each">
        <div class="time-line-message">
          <span style="border-bottom: solid 2px ;">本日の空き時間</span>
        </div>
    <% end %>
      <div class="tl-border">
        <% current_user.all_following.each do |user| %>
          <% @schedules = Schedule.where(user_id: user.id) %>
          <% @schedules.each do |schedule| %>
            <% if Date.today.wday == 0 && schedule.from_time_sun != nil && schedule.to_time_sun != nil%>
              <div class="in-each">
                <div class="tl-left">
                  <div class="l_user">
                    <%= link_to "#{user.name}", user_path(user) %>
                  </div>
                </div>
                <div class="tl-right">
                  <div class="times">
                    <%= "#{schedule.from_time_sun}：00〜#{schedule.to_time_sun}：00" %>
                  </div>
                  <div class="tl-location">
                    <%= schedule.location %>
                  </div>
                </div>
              </div>
            <% elsif Date.today.wday == 1 && schedule.from_time_mon != nil && schedule.to_time_mon != nil%>
              <div class="in-each">
                <div class="tl-left">
                  <div class="l_user">
                    <%= link_to "#{user.name}", user_path(user) %>
