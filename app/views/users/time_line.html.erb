<% breadcrumb :time_line %>
<div class="tl-wrap">
  <div class="time-line">
    <% unless current_user.all_following.present? %>
      <div class="no-follow-now">
        ※ここにフォロー中のユーザーが表示されます
      </div>
    <% else %>
      <div class="tl-each">〜タイムライン〜</div>
        <div class="time-line-message">
          <% wday = ["日", "月", "火", "水", "木", "金", "土"] %>
          <span style="border-bottom: solid 2px ;"><%= "本日：#{Date.today.month}月 #{Date.today.day}日（#{wday[Date.today.wday]}）の暇な時間"%></span>
        </div>
    <% end %>
      <div class="tl-border">
        <% current_user.all_following.each do |user| %>
          <% @schedules = Schedule.where(user_id: user.id) %>
