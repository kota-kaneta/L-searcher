  <div class="sec-wrapper">
    <% if current_user.schedule %>
      <div class="hello-user">
         〜こんにちは<span class="index-bubble"><%= current_user.name %><span class="balloon"><%= "フォロー：#{current_user.follow_count}, フォロワー： #{current_user.followers_count}"%></span></span>さん〜</div>
      <div class="new-notifications">
        <%= link_to "通知",  notifications_path, method: :get, class: "notification-index_link" %>
      </div>
      <b class="favorite-link">
        <%= link_to "★",{controller: :users,action: :makings,user_id: current_user.id}, method: :get, class: "f-link" %>
      </b>
    <div class="link-wrap">
      <div class="top-link">
        <%= link_to "マイページ", user_path(current_user.id), class: "my-page_link"%>
      </div>
      <div class="top-link">
        <%= link_to "ユーザー検索", search_users_path, class: "my-page_link" %>
      </div>
      <div class="top-link">
        <%= link_to "タイムライン", time_line_users_path, method: :get, class: "my-page_link" %>
      </div>
      <div class="top-link">
        <%= link_to "ルーム一覧", room_list_room_path(current_user.id), method: :get, class: "my-page_link" %>
      </div>
