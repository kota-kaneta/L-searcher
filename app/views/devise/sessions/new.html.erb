<div class="head_bar">
      <% if user_signed_in? %>
        <div class="user_nav">
          <div class="log_nav">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            <%= link_to "スケジュールを登録する", new_schedule_path %>
          </div>
          <div class="follow_nav">
            <%= link_to "ユーザーをフォローする", "" %>
          </div>
        </div>
      <% else %>
        <div class="user_nav_new">
          <%= link_to "ログイン", new_user_session_path, class: "post" %>
          <%= link_to "新規登録", new_user_registration_path, class: "post" %>
        </div>
      <% end %>
  </div>
<h2 class="please">※はじめて利用する方は新規登録をしてください</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label "Eメール" %><br />
    <%= f.email_field :email, placeholder:"携帯、PCどちらでも可", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %><br />
    <%= f.password_field :password, placeholder: "半角英数字6文字以上", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログインする" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
