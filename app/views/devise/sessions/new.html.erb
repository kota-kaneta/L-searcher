<div class="head_bar">
        <div class="user_nav_new">
          <%= link_to "ログイン", new_user_session_path, class: "post" %>
          <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          <div class="guest">
            <%= link_to 'ゲスト用ログイン（1）', users_guest_sign_in_path, method: :post, class: "post" %>
            <%= link_to 'ゲスト用ログイン（2）', users_guest_two_sign_in_path, method: :post, class: "post" %>
          </div>
        </div>
    <div class="facebook">
      <%= link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post, class: "button"%>
    </div>
  </div>
  <h2 class="please">※はじめて利用する方は新規登録をしてください</h2>

<div class="user-wrap">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label "Eメール" %><br />
    <%= f.email_field :email, placeholder:"携帯、PCどちらでも可", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %><br />
    <%= f.password_field :password, placeholder: "半角英数字6文字以上", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="log-actions">
    <%= f.submit "ログインする", class: "button" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
