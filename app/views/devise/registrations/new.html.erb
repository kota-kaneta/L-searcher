<div class="new-user-wrap">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="errors">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
    <div class="field">
      <%= f.label "名前" %><br />
      <%= f.text_field :name, id:"name", placeholder:"例) 山田太郎", rows: "1", maxlength: "10"  %>
    </div>

    <div class="field">
      <%= f.label "Eメール" %><br />
      <%= f.email_field :email, id:"email", placeholder:"携帯、PCどちらでも可", autofocus: true, autocomplete: "email", cols: "25" %>
    </div>

  <%if @sns_id.present? %>
    <%= hidden_field_tag :sns_auth, true %>
  <% else %>
    <div class="field">
      <%= f.label "パスワード" %><br />
      <%= f.password_field :password, placeholder: "半角英数字6文字以上",autocomplete: "new-password", cols: "25" %>
    </div>

    <div class="field">
      <%= f.label "パスワード（確認用）" %><br />
      <%= f.password_field :password_confirmation, placeholder: "半角英数字6文字以上", autocomplete: "new-password", cols: "25" %>
    </div>
  <% end %>
    <div class="field">
      <%= f.label "ユーザーID（フォロー用）" %><br />
      <%= f.text_field :search_number, id:"search_number", placeholder:"任意の数字8文字（先頭0以外）", rows: "1", maxlength: "8", cols: "25"%>
      <%= f.submit "登録する", class: "actions" %>
    </div>
<% end %>
</div>
