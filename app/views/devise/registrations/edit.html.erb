<% breadcrumb :edit_user %>
  <% if current_user.email == "guest@example.com" || current_user.email == "guest2@example.com" %>
    <div class="guest-alert">
      ※ゲストはユーザー情報を変更することはできません。
    </div>
  <% else %>
<div class="user-wrap">
<h2 class="edit-user-title"> 〜ユーザー情報変更ページ〜</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="edit-errors">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, rows: "1", maxlength: "10" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>すでにこのEメールは使用されています: <%= resource.unconfirmed_email %></div>
  <% end %>

